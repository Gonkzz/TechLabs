
<script src="~/Scripts/Views/CalendarAdmin.js"></script>
@{
    ViewBag.Title = "Citas";
}


<link href="~/Content/Views/Calendar/CalendarAdmin.css" rel="stylesheet" />
<link href="~/Content/Views/Calendar/main.css" rel="stylesheet" />


<script src="~/Scripts/Calendario/main.js"></script>



<h2 class="container text-center pt-5">Administración de citas e ingreso resultados</h2>





<body>
    <div id='calendar'></div>
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <div id="form" class="form-group ">
                    <div class="form-group">
                        <label for="txtId" class="form-label mb-0 mt-1">Identificador:</label>
                        <input type="text" class="form-control" id="txtId" ColumnDataName="Identificador" readonly="readonly" disabled />
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="form-label mb-0 mt-1">Nombre:</label>
                        <input type="text" class="form-control" id="txtName" ColumnDataName="Nombre" readonly="readonly" disabled />
                    </div>

                    <div class="form-group">
                        <label for="txtClient" class="form-label mb-0 mt-1">Cliente:</label>
                        <input type="text" class="form-control" id="txtClient" ColumnDataName="Cliente" readonly="readonly" disabled />
                    </div>

                    <div class="form-group">
                        <label for="txtMail" class="form-label">Correo:</label>
                        <input type="text" class="form-control" id="txtMail" ColumnDataName="Correo" readonly="readonly" disabled />
                    </div>
                    <div class="form-group">
                        <label for="txtPhone" class="form-label mb-0 mt-1">Número de teléfono:</label>
                        <input type="number" class="form-control" id="txtPhone" ColumnDataName="Telefono" readonly="readonly" disabled />
                    </div>
                    <div class="form-group">
                        <label for="txtStatus" class="form-label mb-0 mt-1">Estatus:</label>
                        <input type="text" class="form-control" id="txtStatus" ColumnDataName="Status" readonly="readonly" disabled />
                    </div>
                </div>
            </div>
            <div class="col">
                <div>
                    <h5 class="container text-start">Ingresar Resultados</h5>
                    <div class="d-flex justify-content-center  green-border-focus">
                        <textarea id="txtResults" rows="10" cols="50" class="form-control-lg"></textarea>
                    </div>
                    <div class="text-center mt-3 ">
                        <button id="submit" class="btn btn-primary btn">Registrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
